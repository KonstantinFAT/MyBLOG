body{
	margin:0;
	padding: 0;
	
	
}


.main{
	height: auto;
	background-image: url("C:/Users/Константин/Desktop/My web page/image/background.jpg");
	display: grid;
	grid-template-columns: 1fr 1000px 1fr;
	grid-template-rows: 100px repeat(auto-fill) 100px;
	grid-gap: 10px;
	
}

img{
	display: grid;
	align-self: center;
	justify-self: center;
	max-height: 500px;
	max-width: 450px;
}

.menu{
	
	max-height: 50px;
	display: block;
	position: relative;
}

ul{
	padding-left: 0px;
}

li{
	text-align: left;
}

.menu_website {
	display:none;
	margin-top: 40px;
	position: relative;
}

.pop-up_menu{
	display: grid;
	grid-row: 1fr 1rf;
	grid-column: 1fr;
}

.pop-up_menu:hover >.menu_website{
	display: block;
	
}

menu{
	
	display: grid;
	grid-row: 2/2;
	grid-column: 1/2;
	margin-bottom: 0px;
	margin-top: 0px;
	
	
}


.article{
	
	display:grid;
	grid-row: 2/2;
	grid-column: 2/3;
	background: linear-gradient(45deg, #EECFBA, #C5DDE8);
	padding-left: 20px;
	padding-right: 20px;
	padding-bottom: 20px;
	box-shadow: 0 0 10px black;
	margin-bottom: 10px;
	grid-template-columns: 1fr 1fr;
	grid-template-rows: minmax(100px, auto) 1fr;
}
	
h2{
	display: grid;
	grid-column: 1/3;
	grid-row: 1/2;
	font-size: 30px;
	font-weight: 900;
	font-family: 'AmaticSC-Regular';
	color: black;
	text-indent: 30px;
	text-align: justify;
	margin: 10px;
}

a:hover {
	background-color: #D8DEBA;
}

p{
	background-color: hsla(0, 0%, 100%, 0.4);
	margin: 5px;
	padding: 3px;
	font-family: 'Ruda-VariableFont_wght';
	max-width: 500px;
	text-align: justify;
	text-indent: 30px;
	line-height: 1.5;
}

header{
	display: grid;
	grid-template-columns: 200px 1fr 1fr;
	grid-template-rows: 1fr;
}

h1{
	display: grid;
	grid-column: 1/4;
	position: absolute;
	justify-self: center;
}
	
#shapka{
	font-size: 20px;
	font-weight: 800;
	font-family: 'AmaticSC-Regular';
	color: black;
	background: linear-gradient(45deg, #EECFBA, #C5DDE8);
	padding: 15px;
	text-align: center;
	display: grid;
	grid-row: 1/2;
	grid-column: 1/4;
	align-items: center;
	box-shadow: 0 0 10px black;
	
}

#dno{
	display: grid;
	font-size: 20px;
	font-weight: 800;
	align-self: stretch;
	font-family: 'AmaticSC-Regular';
	color: black;
	background: linear-gradient(45deg, #EECFBA, #C5DDE8);
	grid-column: 1/4;
	grid-row: 3/4;
	margin-top: 10px;
	align-items: center;
	justify-items: center;
	box-shadow: 0 0 10px black;
}

a{
	text-decoration: none;
	color: black;
}

