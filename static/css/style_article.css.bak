body{
	margin:0;
	padding: 0;
	
	
}


.main{
	height: auto;
	background-image: url("/static/image/background.jpg");
	display: grid;
	grid-template-columns: 1fr 1000px 1fr;
	grid-template-rows: 100px repeat(auto-fill) 100px;
	grid-gap: 10px;
	
}

main{
	display:grid;
	grid-row: 2/3;
	grid-column: 2/3;
}

.fig_nasos{ text-align: center; }

.fig_formula {text-align: center;}

.image{
	
	max-height: 350px;

	
}

.image_formula{
	max-height: 100px;
	
}
li{
	list-style-type:none;
	background-color: white;
	padding-left: 40px;
	padding-bottom: 4px;
}

ol, ul {
	margin: 0px;
	padding: 0px;

}

.subtitle{
	padding: 15px;
	font-size: 20px;
	text-align: center;
	font-weight: 700;
	text-indent: 0px;
}

.article{
	
	
	background: linear-gradient(45deg, #EECFBA, #C5DDE8);
	padding-left: 20px;
	padding-right: 20px;
	padding-bottom: 20px;
	box-shadow: 0 0 10px black;
	margin-bottom: 10px;
}
	
h1{
	font-size: 30px;
	font-weight: 900;
	font-family: 'AmaticSC-Regular';
	color: black;
	padding-left: 30px;
	text-align: center;
}

h3{
	text-align: right;
	font-size: 18px;
	font-family: 'AmaticSC-Regular';
	margin-bottom: 3px;
	padding-bottom: 3px;
}

h4{
	text-align: left;
	font-size: 18px;
	font-family: 'AmaticSC-Regular';
	margin-bottom: 3px;
	padding-bottom: 3px;
}

p{
	background-color: white;
	text-indent: 40px;
	margin-top: 0px;
	margin-bottom: 0px;
	padding-left: 5px;
	padding-right: 5px;
}
	
.picture_caption{
	font-size: 20px;
	text-align: center;
	font-weight: 700;
	text-indent: 0px;
	padding-bottom: 4px;
}	
	
.explanation_of_the_drawing	{
	font-size: 15px;
	text-align: center;
	font-weight: 600;
	text-indent: 0px;
	padding-bottom: 4px;
}
	
#shapka{
	font-size: 40px;
	font-weight: 800;
	font-family: 'AmaticSC-Regular';
	color: black;
	background: linear-gradient(45deg, #EECFBA, #C5DDE8);
	padding: 15px;
	text-align: center;
	display: grid;
	grid-row: 1/2;
	grid-column: 1/4;
	align-items: center;
	box-shadow: 0 0 10px black;
}

#dno{
	display: grid;
	font-size: 20px;
	font-weight: 800;
	align-self: stretch;
	font-family: 'AmaticSC-Regular';
	color: black;
	background: linear-gradient(45deg, #EECFBA, #C5DDE8);
	grid-column: 1/4;
	grid-row: 3/4;
	margin-top: 10px;
	align-items: center;
	justify-items: center;
	box-shadow: 0 0 10px black;
}

a{
	text-decoration: none;
	color:black;
}

.formula_width {
	max-width: 600px;
}
.formula_height {
	max-height: 500px;
}
